@model Models.ViewModels.OrganisationIndexViewModel

@{
    ViewData["Title"] = "Index";
}
    <div class="displaybox">
        <div class="row">
            <div class="col-sm-12 col-md-3"><h3>Organisations</h3> </div>
            <div class="col-sm-12 col-md-3"><a class="btn btn-block btn-primary Buton-Green" asp-action="Create">Create New</a>   </div>
        </div>
    </div>

    <div class="setverticalscroll" style="height:550px;">
        
        @foreach (var item in Model.Index.OrderBy(x => x.Name))
        {
            <div class="displaybox">
               

                <div class="row">

                    <div class="col-md-3 col-sm-12 displaybox1">
                        <a asp-action="Edit" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.Name)</a>
                    </div>

                    <div class="col-md-2 col-sm-12 displaybox1">
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                    <div class="col-md-2 col-sm-12 displaybox1">
                        <a  asp-action="Index" asp-controller="OrganisationItem" asp-route-id="@item.Id">List Items</a>
                    </div>
                </div>
            </div>
        }
    </div>